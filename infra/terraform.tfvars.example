# =============================================================================
# VidScribe - Example Terraform Variables
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values.
# Do NOT commit terraform.tfvars to version control!
# =============================================================================

# AWS Region
aws_region = "eu-west-1"

# Project naming
project_name = "vidscribe"
environment  = "prod"

# -----------------------------------------------------------------------------
# Windows Users: Enable PowerShell scripts for local Terraform operations
# Set to false or remove for Linux/Mac
# -----------------------------------------------------------------------------
# use_windows_scripts = true

# =============================================================================
# Application Configuration (Managed via manage.ps1 / SSM)
# =============================================================================
# The following variables are used ONLY for the initial creation of SSM parameters.
# After deployment, use 'manage.ps1' to update these values.
# Terraform is configured to ignore changes to these values to prevent overwriting.
# =============================================================================

# Email Configuration (Initial Seeding)
# sender_email      = "your-verified-sender@example.com"
# destination_email = "your-email@example.com"
# admin_email       = "admin@example.com"

# YouTube Configuration (Initial Seeding)
# youtube_channels = ["UCBcRF18a7Qf58cCRy5xuWwQ"]

# LLM Configuration (Initial Seeding)
# llm_provider = "gemini"
# llm_model    = "gemini-1.5-flash"
# summarization_language = "Italian"

# =============================================================================
# API Keys & Secrets
# =============================================================================
# These should NEVER be committed. Use 'manage.ps1 apikeys' to set them.
# youtube_api_key = "..."
# llm_api_key     = "..."

# =============================================================================
# Lambda Customization (Optional)
# =============================================================================
# poller_timeout     = 60
# processor_timeout  = 120
# newsletter_timeout = 60
# log_retention_days = 7
# dynamodb_ttl_days  = 30

# =============================================================================
# Proxy & Gmail (Optional)
# =============================================================================
# Configure these using:
#   .\manage.ps1 apikeys    (for proxy credentials)
#   .\manage.ps1 email      (for Gmail credentials)
#
# webshare_username = "..."
# webshare_password = "..."
# use_gmail_smtp    = true
# gmail_sender      = "..."
# gmail_app_password = "..."
